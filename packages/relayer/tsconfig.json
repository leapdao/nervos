{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "preserveConstEnums": true
    },
    "include": [
        "src/**/*", "start.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}