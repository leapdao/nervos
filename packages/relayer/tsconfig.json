{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "preserveConstEnums": true,
        "target": "esnext",
        "module": "commonjs",
    },
    "include": [
        "src/**/*", "start.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}